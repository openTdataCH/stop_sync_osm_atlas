# Copy this file to .env and adjust values. Do not commit your .env.

# MySQL base user for stops_db (created by docker-compose mysql env)
MYSQL_USER=stops_user
MYSQL_PASSWORD=1234

# Optional dedicated user for auth_db (entrypoint will create and grant privileges)
# Leave empty to skip creating a dedicated user.
AUTH_DB_USER=
AUTH_DB_PASSWORD=

# SQLAlchemy URIs (override if you change users/passwords/hosts)
DATABASE_URI=mysql+pymysql://stops_user:1234@db/stops_db
AUTH_DATABASE_URI=mysql+pymysql://stops_user:1234@db/auth_db

# Flask
SECRET_KEY=dev-insecure
FORCE_HTTPS=false
SESSION_COOKIE_SECURE=false

# Dev toggles
AUTO_MIGRATE=true
MATCH_ONLY=false
SKIP_DATA_IMPORT=false

# Optional Turnstile keys
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=


# Email / Amazon SES
# Region where your SES is configured (e.g., eu-west-1)
AWS_REGION=eu-west-1
# Verified SES identity used as the From address (required)
SES_FROM_EMAIL=
# Optional: existing SES configuration set name
SES_CONFIGURATION_SET=

# AWS credentials for SES (only if not using instance/task roles)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# AWS_SESSION_TOKEN= # optional for temporary credentials

